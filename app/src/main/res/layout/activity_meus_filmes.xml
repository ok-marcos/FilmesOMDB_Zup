<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meus_filmes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="filmesomdb.cursoandroid.com.filmesomdb.MeusFilmesActivity"
    android:background="@color/cardview_light_background">

    <TextView
        android:text="Meus Filmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Adicionar Filme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filmenovoid"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/cardview_shadow_start_color"
        android:backgroundTint="?android:attr/colorControlHighlight"
        android:elevation="0dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/fundotransparente"
        android:layout_alignParentTop="true" />

</RelativeLayout>
